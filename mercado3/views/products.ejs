<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Todos los productos'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Todos los productos</h2>
			</div>
			<% products.forEach(product => { %>
			 
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="products/detail/<%= product.id %> ">
						<figure class="product-box_image">
							<img src="/images/products/<%=product.image %> " alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<% let precioFinal = product.price-(product.discount*product.price/100)%> 
							<% precioFinal = Math.round(precioFinal) %>
							<h2><%= aMiles(precioFinal) %> </h2>
							<span><%= product.discount %> % OFF</span>
							<p><%= product.name %> </p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
			<% } )%>
		</div>
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
